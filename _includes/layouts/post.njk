---
layout: layouts/base.njk
---
{# Only include the syntax highlighter CSS on blog posts, included with the CSS per-page bundle #}
<style>
    @layer reset {
	    {% include "node_modules/prismjs/themes/prism-okaidia.css" %}
	}
</style>
<style>
	{% include "css/prism-diff.css" %}
</style>
<article class="post">
	<hgroup>
		<h1>{{ title }}</h1>
		<p class="published">Published <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate
}}</time>
		</p>
	</hgroup>

	{{ content | safe }}

	<footer class="post-footer">
	    <h2>Tags</h2>
			<ul class="tags">
			    {%- for tag in tags | filterTagList %}
				{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
				<li>
					<a href="{{ tagUrl }}" class="post-tag tag">{{ tag }}</a>
				</li>
				{%- endfor %}
			</ul>

